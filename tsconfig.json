{
  "compilerOptions": {
    /*
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
   */
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": [ "es6", "es2015", "dom" ],
    "module": "es2015",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": false,
    "target": "ES5"
  }, 
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/index.ts" // used for webpack all.js

  ],
  "include": [
    "./src/**/*.ts"
  ],
  "typeroots": [
    "./node_modules/@types"
  ]
}
